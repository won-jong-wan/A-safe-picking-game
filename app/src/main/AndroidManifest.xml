<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FragmentTest"
        tools:targetApi="31">
        <activity
            android:name=".ClearPageActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SaveAndLoadPageActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SettingPageActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".GamePageActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".TextPageActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".StartPageActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChallengeActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
    </application>

</manifest>